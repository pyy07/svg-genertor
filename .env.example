# 数据库配置
DATABASE_URL="postgresql://user:password@localhost:5432/svg_generator?schema=public"

# Google AI Studio API Key
# 获取地址: https://aistudio.google.com/
GOOGLE_AI_API_KEY="your_google_ai_api_key_here"

# Gemini 模型配置（可选）
# 默认使用 gemini-3.0-pro，如果不可用可以尝试：gemini-3.0-flash, gemini-1.5-pro, gemini-pro
GEMINI_MODEL="gemini-3-pro-preview"

# NextAuth 配置
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# 微信登录配置（可选）
# 测试号获取: https://mp.weixin.qq.com/debug/cgi-bin/sandbox?t=jsapisandbox
WECHAT_APP_ID="your_wechat_app_id"
WECHAT_APP_SECRET="your_wechat_app_secret"
WECHAT_REDIRECT_URI="http://localhost:3000/api/auth/wechat"
WECHAT_USE_TEST_ACCOUNT="true"

# 代理配置（如果需要通过代理访问 Google API）
# 常见代理端口：
# - Clash: http://127.0.0.1:7890
# - V2Ray: http://127.0.0.1:10809
# - Shadowsocks: socks5://127.0.0.1:1080
HTTPS_PROXY="http://127.0.0.1:7890"
HTTP_PROXY="http://127.0.0.1:7890"
# 或者使用 PROXY 变量（会自动应用到 HTTPS_PROXY 和 HTTP_PROXY）
# PROXY="http://127.0.0.1:7890"

# 本地测试模式（可选）
# 设置为 true 时，无需登录即可生成 SVG（仅用于本地开发）
ALLOW_ANONYMOUS="false"
